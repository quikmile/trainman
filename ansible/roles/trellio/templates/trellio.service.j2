[Unit]
Description=Trellio Registry

[Service]
ExecStart=/home/{{ ansible_user }}/venv/bin/python -m trellio.registry
Restart=always
StandardOutput=/var/log/trellio_registry.log
StandardError=/var/log/trellio_registry.log
SyslogIdentifier=trellio_registry
User={{ ansible_user }}
Group={{ ansible_user }}
WorkingDirectory=/home/{{ ansible_user }}/venv/bin/


[Install]
WantedBy=multi-user.target